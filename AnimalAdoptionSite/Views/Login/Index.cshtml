
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/admin/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">

            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/admin/login-form-19/images/logos.jpg);"></div>
                        <h3 class="text-center mb-0">Admin Giriş Ekranı</h3>
                        <h3 class="text-center mb-0">Hoşgeldiniz</h3>
                        <p class="text-center">Lütfen Bilgilerinizi Giriniz</p>
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger text-center">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="email" class="form-control" name="AdminUserName" placeholder="Kullanıcı adı" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control" name="AdminPassword" placeholder="Şifre" required>
                                <small class="form-text text-muted"></small>
                            </div>
                            
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap</button>
                            </div>
                        }
                       
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/admin/login-form-19/js/jquery.min.js"></script>
    <script src="~/admin/login-form-19/js/popper.js"></script>
    <script src="~/admin/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/admin/login-form-19/js/main.js"></script>

</body>
</html>

