@model EntityLayer.Concrete.PetShop
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Yeni Ürün Ekleme</h2>

@using (Html.BeginForm("AddProduct", "PetShop", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.ProductName)
        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ProductInfo)
        @Html.TextBoxFor(model => model.ProductInfo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="ProductImage">Ürün Fotoğrafı</label>
        <input type="file" name="ProductImage" class="form-control" />
    </div>
    <input type="submit" value="Ekle" class="btn btn-primary" />
}
